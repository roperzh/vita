<%= partial "partials/headline" %>

<%= partial "partials/category", locals: { title: "Experience", icon: "briefcase" } %>

<%= partial "partials/timeline" %>

<%= partial "partials/category", locals: { title: "Personal Projects", icon: "gear" } %>

<div class="projects">
  <ol>
    <% profile.projects.each do |project| %>
      <li class="item">
        <h4>
          <a href="<%= project['url'] %>" class="title"><%= project["name"] %></a>
        </h4>
        <p><%= project["description"] %></p>
      </li>
    <% end %>
  </ol>
</div>

<%= partial "partials/category", locals: { title: "Skills", icon: "flask" } %>

<div class="skills">
  <ul>
    <% profile.skills.each do |skill| %>
      <li class="skill">
        <strong class="tag-<%= Random.rand(5) %>"><%= skill["name"] %></strong>
      </li>
    <% end %>
  </ul>
</div>

<%= partial "partials/category", locals: { title: "Courses", icon: "certificate" } %>

<ol>
  <% profile.courses.each do |course| %>
    <li>
      <h4><%= course["name"] %></h4>
    </li>
  <% end %>
</ol>

